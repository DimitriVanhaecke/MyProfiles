@page "/calculator"
<h3>Calculator</h3>
<input @bind="SchermTekst" />
<div class="container text-center">
    <div class="row row-cols-3">
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("7"))>7</button>

        </div>
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("8"))>8</button>

        </div>
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("9"))>9</button>

        </div>
  
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("4"))>4</button>

        </div>
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("5"))>5</button>

        </div>
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("6"))>6</button>

        </div>
   
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("1"))>1</button>

        </div>
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("2"))>2</button>

        </div>
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("3"))>3</button>

        </div>
   
        <div class="col"></div>
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("0"))>0</button>

        </div>
        <div class="col"></div>
        <div class="col">

        </div>
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("+"))>+</button>

        </div>
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("-"))>-</button>

        </div>
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("x"))>x</button>

        </div>
        <div class="col">
            <button type="button" class="btn btn-secondary" @onclick=@(_=>GetWaarde("%"))>%</button>
        </div>
        <div class="col">
            <button type="button" class="btn btn-primary" @onclick=@(_=>GetWaarde("="))>=</button>

        </div>
    
    </div>
</div>

@code {
    public string SchermTekst { get; set; }

    private void GetWaarde(string tekst)
    {
        SchermTekst += tekst;

    }
}
